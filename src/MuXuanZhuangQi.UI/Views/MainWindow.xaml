<Window x:Class="MuXuanZhuangQi.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="慕雪安装器"
        Icon="/Resources/icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16">
            <Button Style="{StaticResource MaterialDesignIconButton}" 
                    Command="{Binding OpenSettingsCommand}">
                <materialDesign:PackIcon Kind="Settings" Width="24" Height="24"/>
            </Button>
        </StackPanel>

        <!-- 主要内容区域 -->
        <StackPanel Grid.Row="1" Margin="16">
            <TextBlock Text="选择APK文件" 
                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                     Margin="0,0,0,16"/>
            
            <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="8"
                    Margin="0,0,0,16">
                <DockPanel>
                    <Button DockPanel.Dock="Right" 
                            Margin="8,0,0,0"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding BrowseCommand}">
                        浏览
                    </Button>
                    <TextBlock Text="{Binding SelectedFilePath}"
                             VerticalAlignment="Center"
                             TextTrimming="CharacterEllipsis"/>
                </DockPanel>
            </Border>
        </StackPanel>

        <!-- 底部安装按钮 -->
        <Button Grid.Row="2"
                Margin="16"
                Height="48"
                Style="{StaticResource MaterialDesignContainedButton}"
                Background="{DynamicResource PrimaryHueMidBrush}"
                Command="{Binding InstallCommand}">
            安装
        </Button>
    </Grid>
</Window>
<StackPanel>
    <ComboBox ItemsSource="{Binding SelectedPackage.SupportedInstallationTypes}"
              SelectedItem="{Binding SelectedInstallationType}"
              DisplayMemberPath="Name"
              Margin="0,10"/>
              
    <Button Content="安装"
            Command="{Binding InstallCommand}"
            Margin="0,10"/>
            
    <ProgressBar Value="{Binding InstallationProgress}"
                 Height="20"
                 Margin="0,10"/>
</StackPanel>