<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <!-- READ_EXTERNAL_STORAGE 在 targetSdk 33+ 上通常不再需要，系统会自动处理媒体文件访问 -->
    <!-- 如果确实需要访问非媒体文件，可能需要 MANAGE_EXTERNAL_STORAGE (需要 Google Play 审核) -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="32" /> -->

    <!-- SDK 版本要求 -->
    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <!-- 应用配置 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        tools:targetApi="34">

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"
            android:exported="false"/> <!-- 明确指定 exported="false" 更清晰 -->
        <activity android:name=".AboutActivity"
            android:exported="false"/>   <!-- 明确指定 exported="false" 更清晰 -->

        <!-- FileProvider 配置 (如果使用系统安装方式，强烈建议配置) -->
        <!-- 需要在 res/xml/ 目录下创建 provider_paths.xml 文件 -->
        <!--
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        -->

        <!-- meta-data 通常不需要手动添加版本信息，构建系统会自动处理 -->
        <!--
        <meta-data
            android:name="VERSION_NAME"
            android:value="Beta1.0" />
        <meta-data
            android:name="VERSION_CODE"
            android:value="2554" />
        -->

    </application>

</manifest>
<!-- 确保文件末尾没有任何多余的内容！ -->
